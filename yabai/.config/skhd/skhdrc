# open/focus terminal
cmd + shift - return : open /Applications/Alacritty.app

# restart yabai
shift + ctrl + cmd - r : yabai --restart-service

# fast focus space
cmd - left  : yabai -m space --focus prev
cmd - right : yabai -m space --focus next

# focus window
shift + cmd - left  : yabai -m window --focus west
shift + cmd - right : yabai -m window --focus east
shift + cmd - up    : yabai -m window --focus north
shift + cmd - down  : yabai -m window --focus south

# focus stacked windows
shift + cmd - home : yabai -m window --focus stack.prev
shift + cmd - end  : yabai -m window --focus stack.next

# move managed window
ctrl + cmd - left  : yabai -m window --warp west
ctrl + cmd - right : yabai -m window --warp east
ctrl + cmd - up    : yabai -m window --warp north
ctrl + cmd - down  : yabai -m window --warp south

# swap managed window
shift + ctrl + cmd - left  : yabai -m window --swap west
shift + ctrl + cmd - right : yabai -m window --swap east
shift + ctrl + cmd - up    : yabai -m window --swap north
shift + ctrl + cmd - down  : yabai -m window --swap south

# balance size of windows
ctrl + cmd - return : yabai -m space --balance

# center window
ctrl + alt - c : yabai -m window --grid 4:4:1:1:2:2

# Enable / Disable gaps in current workspace
ctrl + alt + cmd - return : yabai -m space --toggle padding; yabai -m space --toggle gap

# switch layouts
alt - s : yabai -m space --layout stack
alt - w : yabai -m space --layout bsp
alt - x : yabai -m space --layout float

# rotate tree
alt - r : yabai -m space --rotate 90

# toggle window zoom
alt - d : yabai -m window --toggle zoom-parent
alt - f : yabai -m window --grid 1:1:0:0:1:1 || yabai -m window --toggle zoom-fullscreen

# toggle window split type
alt - e : yabai -m window --toggle split

# focus space
ctrl + alt - 1 : yabai -m space --focus 1
ctrl + alt - 2 : yabai -m space --focus 2
ctrl + alt - 3 : yabai -m space --focus 3
ctrl + alt - 4 : yabai -m space --focus 4
ctrl + alt - 5 : yabai -m space --focus 5

# create space, move window and follow focus - uses jq for parsing json (brew install jq)
shift + ctrl + alt - n : yabai -m space --create && \
                  index="$(yabai -m query --spaces --display | jq 'map(select(."is-native-fullscreen" == false))[-1].index')" && \
                  yabai -m window --space "${index}" && \
                  yabai -m space --focus "${index}"

# send window to space and follow focus
shift + ctrl - 1 : yabai -m window --space 1
shift + ctrl - 2 : yabai -m window --space 2
shift + ctrl - 3 : yabai -m window --space 3
shift + ctrl - 4 : yabai -m window --space 4
shift + ctrl - 5 : yabai -m window --space 5

# send window to space and follow focus
shift + ctrl + alt - z : yabai -m window --space prev --focus; yabai -m space --focus prev
shift + ctrl + alt - y : yabai -m window --space next --focus; yabai -m space --focus next
shift + ctrl + alt - 1 : yabai -m window --space 1    --focus; yabai -m space --focus 1
shift + ctrl + alt - 2 : yabai -m window --space 2    --focus; yabai -m space --focus 2
shift + ctrl + alt - 3 : yabai -m window --space 3    --focus; yabai -m space --focus 3
shift + ctrl + alt - 4 : yabai -m window --space 4    --focus; yabai -m space --focus 4
shift + ctrl + alt - 5 : yabai -m window --space 5    --focus; yabai -m space --focus 5

# increase window size
shift + ctrl - right : yabai -m window --resize right:20:0
shift + ctrl - down  : yabai -m window --resize bottom:0:20

# decrease window size
shift + ctrl - left : yabai -m window --resize right:-20:0
shift + ctrl - up   : yabai -m window --resize bottom:0:-20

# set insertion point in focused container
# ctrl + alt - h : yabai -m window --insert west

# float / unfloat window and center on screen
shift + alt - f : yabai -m window --toggle float --grid 4:4:1:1:2:2

# toggle sticky(+float), picture-in-picture
alt - p : yabai -m window --toggle sticky --toggle pip

# Toggle sketchybar
shift + ctrl - space : sketchybar --bar hidden=toggle

